<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_kollektivtrafik_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.stafettvarvet15.InfoKollektivtrafik">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewArrow"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:onClick="backButton"/>

    <TextView
        android:text="Ã…k kollektivt."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewArrow"
        android:id="@+id/textViewHeader"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorWhiteOff"
        app:itemIconTint="@drawable/tab_item_color"
        app:itemTextColor="@drawable/tab_item_color"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
