<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_start_tid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.stafettvarvet15.InfoStartTid"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewArrow"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:onClick="backButton"/>

    <TextView
        android:text="Starttid."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewArrow"
        android:id="@+id/textViewHeader"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@+id/textViewHeader"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/line"/>

    <TextView
        android:text="Din starttid är om:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewYourTime"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@+id/textViewYourTime"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/line2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:text="DAGAR       TIMMAR       MINUTER       SEKUNDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView13"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:text="00:00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimer"
        android:textSize="64sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@+id/textViewTimer"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/line3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:text="Starttiden är onsdagen den 17 maj 2017. Första startgrupp startar kl 18.00, startnummer 1-100. Kl 18.01 startnummer 101-200 osv. Det är viktigt att starta i rätt grupp. Löpare som startar i fel startgrupp diskvalificeras. Det är inte tillåtet att byta startgrupp. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/line3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorWhiteOff"
        app:itemIconTint="@drawable/tab_item_color"
        app:itemTextColor="@drawable/tab_item_color"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
