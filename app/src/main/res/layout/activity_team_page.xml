<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_team_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.stafettvarvet15.TeamPage">

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewArrow"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:onClick="backButton"/>


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewArrow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/textViewTeam"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTeam"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewCompany"
        android:textSize="18sp"
        android:textColor="@color/colorGrey"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@+id/textViewCompany"
        android:layout_height="1dip"
        android:background="#d3d3d3"
        android:id="@+id/line"
        android:layout_marginTop="40dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorWhiteOff"
        app:itemIconTint="@drawable/tab_item_color"
        app:itemTextColor="@drawable/tab_item_color"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
