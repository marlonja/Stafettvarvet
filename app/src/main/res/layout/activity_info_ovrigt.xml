<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_area_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.stafettvarvet15.InfoOvrigt"
    android:background="@color/colorPrimary">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewArrow"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:onClick="backButton"/>

    <TextView
        android:text="Bra att veta."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewArrow"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="20dp"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:text="Allt du behÃ¶ver veta och lite till."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"/>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:id="@+id/expandableListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layoutDirection="rtl"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorWhiteOff"
        app:itemIconTint="@drawable/tab_item_color"
        app:itemTextColor="@drawable/tab_item_color"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
